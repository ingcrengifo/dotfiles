"" Encoding
set encoding=utf-8
set fileencoding=utf-8
set fileencodings=utf-8
set ttyfast

"" Fix backspace indent
set backspace=indent,eol,start

""  Tabs
set tabstop=4
set softtabstop=0
set shiftwidth=4
set expandtab

"" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase

set fileformats=unix,dos,mac

"*****************************************************************************
"" Visual Settings
"*****************************************************************************
syntax on
set ruler
set number

" Better command line completion
set wildmenu

" mouse support
set mouse=a

set mousemodel=popup

"" Status bar
set laststatus=2

" Custom
set numberwidth=1
set showmatch
set sw=2
set relativenumber
set autoindent

